---
import Layout from '@/layouts/Layout.astro';
import { Button } from "@/components/ui/button";
import { ArrowRight } from 'lucide-react';
import { Container } from "@/components/ui/container";
---

<Layout title="Welcome | Modern Website">
<Container>
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-5xl font-bold mb-6">Welcome to Our Modern Website</h1>
        <p class="text-xl text-muted-foreground mb-8">
          Experience the perfect blend of design and functionality
        </p>
        <div class="flex gap-4 justify-center">
          <Button client:load>Get Started</Button>
          <Button client:load variant="outline">
            Learn More <ArrowRight className="ml-2 h-4 w-4" />
          </Button>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 my-12 rounded-lg px-2 md:px-8 border-2 dark:border-white/10">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="p-6 bg-background rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold mb-4">Feature One</h3>
          <p class="text-muted-foreground">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          </p>
        </div>
        <div class="p-6 bg-background rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold mb-4">Feature Two</h3>
          <p class="text-muted-foreground">
            Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
          </p>
        </div>
        <div class="p-6 bg-background rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold mb-4">Feature Three</h3>
          <p class="text-muted-foreground">
            Ut enim ad minim veniam, quis nostrud exercitation ullamco.
          </p>
        </div>
      </div>
    </div>
  </section>
</Container>
</Layout>


